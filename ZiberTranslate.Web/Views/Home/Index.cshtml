<div id="main" ng-view ng-controller="InitCtrl"></div>

@section header
{
    @Html.ActionLink("Login", "Login", "Security")
}

@section scripts
{
    <script>
        (function() {
            'use strict';

            angular.module('TranslateApp')
                .service('UserConfig', function() {
                return {
                    authenticated: @(ViewBag.IsAuthenticated.ToString().ToLower()),
                    user: {
                        username: '@ViewBag.Username'
                    }
                };
            });
        })();
    </script>

    
}
