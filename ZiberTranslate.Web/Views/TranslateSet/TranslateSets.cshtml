@model ZiberTranslate.Web.ViewModels.TranslateSetsViewModel

@{
    ViewBag.Title = "TranslateSets";
}

<h2>Duitse vertalingen</h2>

@Html.ActionLink("Login", "Login", new { controller = "Security", returnUrl = this.Context.Request.Url.PathAndQuery })
|
@Html.ActionLink("Logout", "Logout", "Security")
<br />
<br />

<h3>
    <a href="/">Home</a>
</h3>


<ul id="translate-sets">
    @if (Model.Language == "en")
    {
        foreach (var set in Model.Sets)
        {
            <li><a href="@Url.RouteUrl("Translations", new { setId = set.Id, language = "en"})">@set.Name (EN)</a></li>
        }
    }
    @if (Model.Language == "de")
    {
        foreach (var set in Model.Sets)
        {
            <li><a href="@Url.RouteUrl("Translations", new { setId = set.Id, language = "de"})">@set.Name (DE)</a></li>
        }
    }
</ul>